<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/playlist_img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playlist_name_tv"
        android:textSize="25sp"
        android:text="Nombre playlist"
        android:layout_margin="5dp"
        android:textColor="@color/texColorView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playlist_description_tv"
        android:textSize="18sp"
        android:text="Descripcion playlist"
        android:layout_margin="5dp"
        android:textColor="@color/texColorView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:textColor="@color/texColorView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_number_songs_tv"
            android:text="# canciones"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/texColorView"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_number_fans_tv"
            android:text="# fans"
            android:textColor="@color/texColorView"
            android:textSize="15sp"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_list"/>

</LinearLayout>