<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_name_tv"
        android:textSize="30sp"
        android:text="Nombre cancion"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textColor="@color/texColorView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_artist_tv"
        android:textSize="25sp"
        android:text="Nombre artista"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textColor="@color/texColorView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_album_tv"
        android:textSize="20sp"
        android:text="Nombre album"
        android:gravity="center"
        android:layout_marginVertical="5dp"
        android:textColor="@color/texColorView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_duration_tv"
        android:textSize="25sp"
        android:text="Duracion cancion"
        android:gravity="center"
        android:layout_marginVertical="15dp"
        android:textColor="@color/texColorView"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/play_song_btn"
        android:text="Escuchar"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

</LinearLayout>